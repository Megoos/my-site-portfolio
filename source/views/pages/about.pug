extends ../mainLayout.pug

block title
  title About

block content
  section.section.hero
    ul.socials
      each item in ['vk', 'gh', 'in']
        li.socials__item
          a(href="" class=`socials__link socials__link_${item}`)
    a(href="").hamburger
    a(href="").down-arrow
    .hero__title
      img(src="../../", alt="").section-title
      .user.hero__user-block
        .user__photo
        .user__name
        .user__desk

  section.section.about
    .about__left
      svg.triangle.triangle_fill_white
      .title.about__section-title
        | Обо мне
      .user-about
        .user-about__picture
        .user-about__title
          .subtitle
            | Кто я
        .user-about__text
          p Описание Lorem ipsum dolor sit, amet consectetur adipisicing elit. Possimus necessitatibus, suscipit incidunt ipsam nemo optio eum voluptatum ipsa odio unde?
          p Lorem ipsum dolor sit amet consectetur adipisicing elit. Id fugit, praesentium quidem pariatur minima qui ipsum eos quo!
    .about__right
      svg.triangle.triangle_fill_beige
      .about-data
        .about-data__description.about-user-info
          .about-user-info__title
            .subtitle Чем я могу быть полезен
          .about-user-info__text
            p Lorem ipsum, dolor sit amet consectetur adipisicing elit. Velit ratione doloremque minima?
        .about-data__content
          ul.skills
              each skill in skills
                each skillsArray, skillName in skill
                  li.skills__item
                    .skill-section
                      .skill-section__title= skillName
                      ul.skill-section__list
                        each skillTitle in skillsArray
                          li.skills-section__item
                            .skill
                              svg.skill__circle
                              .skill__name= skillTitle

  section.section.map  
    